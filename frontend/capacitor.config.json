{
  "appId": "com.profiremanager.app",
  "appName": "ProFireManager",
  "webDir": "build",
  "server": {
    "androidScheme": "https",
    "iosScheme": "https",
    "hostname": "app.profiremanager.local",
    "allowNavigation": ["https://www.profiremanager.ca/*", "https://*.profiremanager.ca/*"]
  },
  "plugins": {
    "PushNotifications": {
      "presentationOptions": ["badge", "sound", "alert"]
    },
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#DC2626",
      "showSpinner": false
    },
    "StatusBar": {
      "backgroundColor": "#DC2626",
      "style": "LIGHT"
    },
    "CapacitorHttp": {
      "enabled": true
    }
  },
  "ios": {
    "contentInset": "automatic",
    "allowsLinkPreview": true
  },
  "android": {
    "allowMixedContent": true,
    "backgroundColor": "#DC2626"
  }
}
